# Configurações da API Gemini
GEMINI_API_KEY=sua_chave_api_aqui

# Limites de Requisições - Gemini Pro (Texto)
GEMINI_PRO_RPM=60
GEMINI_PRO_RPD=60000  # Requisições por dia

# Limites de Requisições - Gemini Vision (Imagens)
GEMINI_FLASH_RPM=60  # Requisições por minuto
GEMINI_FLASH_RPD=60000  # Requisições por dia

# Configurações de Tokens
MAX_INPUT_TOKENS=1048576  # Máximo de tokens de entrada
MAX_OUTPUT_TOKENS=2048    # Máximo de tokens de saída para respostas

# Configurações de áudio
LANGUAGE=pt-BR
AUDIO_TIMEOUT=10
PHRASE_TIMEOUT=30
MIN_SILENCE_DURATION=1.5
SILENCE_THRESHOLD=3000
DYNAMIC_ENERGY=True

# Configurações de captura de tela
SCREENSHOT_DIR=screenshots
SCREENSHOT_FORMAT=PNG
MAX_SCREENSHOTS=5

# Configurações gerais
DEBUG=True

# Configurações de Cache
CACHE_ENABLED=True
CACHE_TIMEOUT=3600  # 1 hora em segundos
MAX_CACHE_ITEMS=100
